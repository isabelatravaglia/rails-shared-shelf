<%= simple_form_for [@book, @transaction] do |f| %>
  <%#= f.error_notification %>

  <% if @transaction.errors.any? %>
   <div class="alert alert-danger">
      <h3>Please fix these problems:</h3>
      <ul>
      <% @transaction.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :borrow_date, :error => false %>
    <%#= f.input :return_date, as: :date, selected: Date.today + 10, as: :hidden%>
    <%#= f.input :book_id, as: :hidden, value: @book.id %>
    <%#= f.input :user_id, as: :hidden, value: current_user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Borrow this book", class: 'btn btn-dark rounded-pill', data: {confirm: "Confirm book borrowing?"} %>
  </div>
  <p>You can keep this book during 10 days, starting from the borrowing date!</p>
<% end %>

